@page
@model per.Pages.OrderPageModel
@{
    ViewData["Title"] = "OrderPage";
    Layout = "~/Pages/Shared/_LayoutOrderPage.cshtml";
}

    <section class="page-section" id="Order">
        <form class="my-form" method="post">
            <div class="container">
                <h1>Contáctanos!</h1>
                <ul>
                    <li>

                        @Html.EditorFor(s => s.Contact.Name, new { htmlAttributes = new { @class = "Snap form-control" } })
                    </li>

                    <li>
                        @Html.EditorFor(s => s.Contact.Email, new { htmlAttributes = new { @class = "Snap form-control" } })
                    </li>
                    <li>
                        <div class="grid grid-2">
                            <input type="text" asp-for="Contact.Eman" placeholder="Nombre" required>
                            <input type="text" asp-for="Contact.EmanTasl" placeholder="Apellido" required>
                        </div>
                    </li>
                    <li>
                        <div class="grid grid-2">
                            <input type="email" asp-for="Contact.Liame" placeholder="Email" required>
                            <input type="tel" asp-for="Contact.Numero" placeholder="Número de móvil" required>
                        </div>
                    </li>
                    <li>
                        <div class="grid grid-2">
                            <input type="text" asp-for="Contact.Link" placeholder="Linkedin" required>
                            <select required>
                                <option selected disabled>-- Tamaño de tu equipo comercial --</option>
                                <option>Menos de 10 vendedores</option>
                                <option>Entre 11 y 25 vendedores</option>
                                <option>Entre 26 y 50 vendedores</option>
                                <option>Entre 51 y 100 vendedores</option>
                                <option>Más de 101 vendedores</option>
                            </select>


                        </div>
                    </li>
                    <li>
                        <p>Solicite una fecha para agendar una cita:</p>
                        <div class="grid grid-2">
                            <input type="date" asp-for="Contact.Fecha" required />
                            <input type="time" asp-for="Contact.Hora" required />
                        </div>
                        
                    </li>
                    <li>
                        <textarea asp-for="Contact.Meta" placeholder="¿Cuál es tu meta de ventas para el 2020?" required></textarea>
                    </li>
                    <li>
                        <textarea asp-for="Contact.Reto" placeholder="¿Cuál es el mayor reto al que se enfrenta tu equipo en éstos momentos?" required></textarea>
                    </li>
                    <li>
                        <div class="grid grid-3">
                            <div class="required-msg">CAMPOS REQUERIDOS</div>
                            <button class="btn-grid" type="submit">
                                <span class="back">
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/email-icon.svg" alt="">
                                </span>
                                <span class="front">ENVIAR</span>
                            </button>
                            <button class="btn-grid" type="reset">
                                <span class="back">
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/eraser-icon.svg" alt="">
                                </span>
                                <span class="front">RESETEAR</span>
                            </button>
                        </div>
                    </li>
                </ul>
            </div>
        </form>
